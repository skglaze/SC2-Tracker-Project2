<div class="user">
    <h1>{{opponent.name}}</h1>

    <p class="user-attribute">Race: {{opponent.race}}</p>
    <p class="user-attribute">MMR: {{opponent.mmr}}</p>
</div>
<br>
<div class="games">
    {{#each opponentGames}}
    <div class="game">
        <a href="/games/{{_id}}">
            <p>Map: {{map}}</p>
        </a>
        <p>Win/Loss: <span class="winOrLoss">{{win}}</span></p>
        <p>Opponent Build: {{opponentStrat}}</p>
        <p>Your Build: {{userStrat}}</p>
        <br>
    </div>
    {{/each}}
</div>

<form action="/opponents/{{opponent._id}}?_method=DELETE" method="POST">
    <input type="submit" value="Delete Opponent" />
</form>

