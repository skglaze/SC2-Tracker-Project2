<h1>{{opponent.name}}</h1>

<p>Race: {{opponent.race}}</p>
<p>MMR: {{opponent.mmr}}</p>
<br>
{{#each opponentGames}}
<a href="/games/{{_id}}">
    <p>{{map}}</p>
</a>
<p>{{opponentStrat}}</p>
<p>{{userStrat}}</p>
<p>{{win}}</p>
<br>
{{/each}}

<form action="/opponents/{{opponent._id}}?_method=DELETE" method="POST">
    <input type="submit" value="Delete Opponent" />
</form>

<a href="/game/new/{{opponent._id}}">
    <button>
        Record Game
    </button>
</a>

<br>

<a href="/opponents/edit/{{opponent._id}}">
    <button>
        Edit Opponent
    </button>
</a>

<a href="/users/{{opponent.userId}}">
    <p>
        Your Page
    </p>
</a>