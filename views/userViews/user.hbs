<h1>{{user.name}}</h1>

<p>Race: {{user.race}}</p>
<p>MMR: {{user.mmr}}</p>

<h2>Opponents</h2>

{{#each userOpponents}}
<a href="/opponents/{{_id}}">
    <p>{{name}}</p>
</a>
{{/each}}

<a href="/opponents/new/{{user._id}}">
    <button>
        New Opponent
    </button>
</a>

<br>

<a href="/users/edit/{{user._id}}">
    <button>
        Edit User
    </button>
</a>

<a href="/users">
    <p>
        All Users
    </p>
</a>

<form action="/users/{{user._id}}?_method=DELETE" method="POST">
    <input type="submit" value="Delete User" />
</form>