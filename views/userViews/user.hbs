<div class="user">
    <h1>{{user.name}}</h1>

    <p class="user-attribute">Race: {{user.race}}</p>
    <p class="user-attribute">MMR: {{user.mmr}}</p>
</div>

<h2>Opponents</h2>

<div class="opponents">
    {{#each userOpponents}}
    <a href="/opponents/{{_id}}">
        <p class="opponent">{{name}}</p>
    </a>
    {{/each}}
</div>

<a href="/opponents/new/{{user._id}}">
    <button>
        New Opponent
    </button>
</a>

<br>

<a href="/users/edit/{{user._id}}">
    <button>
        Edit User
    </button>
</a>

<a href="/users">
    <p>
        All Users
    </p>
</a>

<form action="/users/{{user._id}}?_method=DELETE" method="POST">
    <input type="submit" value="Delete User" />
</form>